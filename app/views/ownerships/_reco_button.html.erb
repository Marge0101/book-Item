<% if current_user.reco?(item) %>
  <%= form_tag(ownership_path(item.id), method: :delete) do %>
    <%= hidden_field_tag :item_id, item.id %>
    <%= hidden_field_tag :type, 'Reco' %>
    <%= submit_tag '面白かった!', class: 'btn btn-warning' %>
    <!--%= submit_tag 'これオススメ!', class: 'btn btn-success' %-->
  <% end %>
<% else %>
  <%= form_tag(ownerships_path) do %>
    <%= hidden_field_tag :item_code, item.code %>
    <%= hidden_field_tag :type, 'Reco' %>
    <%= submit_tag 'これ読んだ!', class: 'btn btn-primary' %>
  <% end %>
<% end %>